<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.FichaStats">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linhaNivel"
        android:layout_below="@+id/linhaNome"
        android:layout_alignLeft="@+id/linhaNome"
        android:layout_alignStart="@+id/linhaNome">

        <TextView
            android:text="NÃ­vel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tagNivel"
            android:layout_weight="1"
            android:paddingRight="6dp"
            android:fontFamily="sans-serif"

            android:textStyle="bold"/>

        <EditText
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editNivel"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text="1"
            android:textAlignment="center" />

        <TextView
            android:text="EXP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tagExp"
            android:layout_weight="1"
            android:paddingRight="6dp"
            android:fontFamily="sans-serif"

            android:textStyle="bold"/>

        <EditText
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/editExp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text="1"
            android:textAlignment="center" />

    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@color/colorPrimary"
        android:id="@+id/viewImagem"
        android:layout_weight="1"
        android:onClick="pickImage"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linhaNome"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_alignTop="@+id/viewImagem"
        android:layout_toRightOf="@+id/viewImagem"
        android:layout_toEndOf="@+id/viewImagem">

        <TextView
            android:text="Nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tagNome"
            android:layout_weight="1"
            android:textSize="16sp"
            android:paddingRight="6dp"
            android:fontFamily="sans-serif"

            android:textStyle="bold"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editNome"
            android:layout_weight="1"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Info"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/viewImagem"
        android:layout_alignLeft="@+id/viewImagem"
        android:layout_alignStart="@+id/viewImagem">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/editClasse"
                android:textSize="20sp"
                android:layout_height="40dp" />

            <EditText
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/editRaca"
                android:textSize="16sp"
                android:layout_height="36dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stats"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_alignTop="@+id/Misc"
        android:layout_alignRight="@+id/linhaNome"
        android:layout_alignEnd="@+id/linhaNome">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="35dp" />

            <TextView
                android:text="FOR"
                android:layout_width="match_parent"
                android:id="@+id/tagFor"
                android:gravity="center"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:fontFamily="sans-serif"

                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/text_view_rounded" />

            <TextView
                android:text="DES"
                android:layout_width="match_parent"
                android:id="@+id/tagDes"
                android:gravity="center"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:fontFamily="sans-serif"

                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/text_view_rounded"/>

            <TextView
                android:text="CON"
                android:layout_width="match_parent"
                android:id="@+id/tagCon"
                android:gravity="center"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:fontFamily="sans-serif"

                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/text_view_rounded"/>

            <TextView
                android:text="INT"
                android:layout_width="match_parent"
                android:id="@+id/tagInt"
                android:gravity="center"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:fontFamily="sans-serif"

                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/text_view_rounded"/>

            <TextView
                android:text="SAB"
                android:layout_width="match_parent"
                android:id="@+id/tagSab"
                android:gravity="center"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:fontFamily="sans-serif"

                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/text_view_rounded"/>

            <TextView
                android:text="CAR"
                android:layout_width="match_parent"
                android:id="@+id/tagCar"
                android:gravity="center"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:fontFamily="sans-serif"

                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/text_view_rounded"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <TextView
                android:text="Base"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/tagBase"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center"
                android:fontFamily="sans-serif"

                android:textStyle="bold"/>

            <EditText
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editFor"
                android:textSize="14sp"
                android:elevation="1dp"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:text="0"
                android:textAlignment="center"

                android:textStyle="bold"
                android:background="@drawable/value_box"
                />

            <EditText
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/editDes"
                android:textSize="14sp"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:textAlignment="center"

                android:textStyle="bold"
                android:background="@drawable/value_box"
                android:text="0" />

            <EditText
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editCon"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:textAlignment="center"

                android:textStyle="bold"
                android:background="@drawable/value_box"
                android:text="0" />

            <EditText
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editInt"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:textAlignment="center"

                android:textStyle="bold"
                android:background="@drawable/value_box"
                android:text="0" />

            <EditText
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editSab"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:textAlignment="center"

                android:textStyle="bold"
                android:background="@drawable/value_box"
                android:text="0" />

            <EditText
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editCar"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:textAlignment="center"

                android:textStyle="bold"
                android:background="@drawable/value_box"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <TextView
                android:text="Mod"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/tagMod"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center"
                android:fontFamily="sans-serif"

                android:textStyle="bold"/>

            <EditText
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/editModFor"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:text="0"
                android:textSize="14sp"
                android:textAlignment="center"

                android:textStyle="bold"
                android:background="@drawable/value_box"/>

            <EditText
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/editModDes"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:text="0"
                android:textSize="14sp"
                android:textAlignment="center"

                android:textStyle="bold"
                android:background="@drawable/value_box"/>

            <EditText
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/editModCon"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:text="0"
                android:textSize="14sp"
                android:textAlignment="center"

                android:textStyle="bold"
                android:background="@drawable/value_box"/>

            <EditText
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/editModInt"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:text="0"
                android:textSize="14sp"
                android:textAlignment="center"

                android:textStyle="bold"
                android:background="@drawable/value_box"/>

            <EditText
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/editModSab"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:text="0"
                android:textSize="14sp"
                android:textAlignment="center"

                android:textStyle="bold"
                android:background="@drawable/value_box"/>

            <EditText
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/editModCar"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:text="0"
                android:textSize="14sp"
                android:textAlignment="center"

                android:textStyle="bold"
                android:background="@drawable/value_box"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Misc"
        android:layout_below="@+id/Info"
        android:layout_toLeftOf="@+id/linhaNivel"
        android:layout_toStartOf="@+id/linhaNivel"
        android:layout_marginTop="22dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:text="Dano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tagDano"
            android:textAlignment="center"
            android:fontFamily="sans-serif"

            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editDano"
            android:textAlignment="center"
            android:textSize="14sp"
            android:text="0"

            android:textStyle="bold"
            android:background="@drawable/value_box"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:text="Armadura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tagArmadura"
            android:textAlignment="center"
            android:fontFamily="sans-serif"

            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editArm"
            android:textSize="14sp"
            android:textAlignment="center"
            android:text="0"

            android:textStyle="bold"
            android:background="@drawable/value_box"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:text="Atual"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:id="@+id/tagAtual"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="sans-serif"

                android:textStyle="bold"/>

            <TextView
                android:text="Total"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:id="@+id/tagTotal"
                android:layout_weight="1"
                android:textAlignment="center"
                android:fontFamily="sans-serif"

                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="PV"
                android:layout_height="wrap_content"
                android:id="@+id/tagPV"
                android:layout_weight="1"
                android:layout_width="25dp"
                android:textAlignment="center"
                android:fontFamily="sans-serif"

                android:textStyle="bold"/>

            <EditText
                android:layout_width="35dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editPvAtual"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:textSize="14sp"
                android:textAlignment="center"
                android:text="0"

                android:textStyle="bold"
                android:background="@drawable/value_box"

                android:layout_marginRight="4dp"/>

            <EditText
                android:layout_width="35dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editPvTotal"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:textSize="14sp"
                android:textAlignment="center"
                android:text="0"

                android:textStyle="bold"
                android:background="@drawable/value_box"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <TextView
            android:text="Carga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tagCarga"
            android:textAlignment="center"
            android:fontFamily="sans-serif"

            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editCarga"
            android:textSize="14sp"
            android:textAlignment="center"
            android:text="0"

            android:textStyle="bold"
            android:background="@drawable/value_box"/>

    </LinearLayout>

</RelativeLayout>
