<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.FichaStats">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linhaNome">

        <TextView
            android:text="Nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tagNome"
            android:layout_weight="1"
            android:textSize="16sp"
            android:paddingRight="6dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editNome"
            android:layout_weight="1"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linhaNivel"
        android:layout_below="@+id/linhaNome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="EXP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tagExp"
            android:layout_weight="1"
            android:paddingRight="6dp" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/editText19"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text="1"
            android:textAlignment="center" />

        <TextView
            android:text="NÃ­vel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tagNivel"
            android:layout_weight="1"
            android:paddingRight="6dp"
            android:layout_marginLeft="70dp" />

        <EditText
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText20"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text="1"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stats"
        android:layout_below="@+id/linhaNivel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="28dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="35dp" />

            <TextView
                android:text="FOR"
                android:layout_width="match_parent"
                android:id="@+id/tagFor"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_height="35dp" />

            <TextView
                android:text="DES"
                android:layout_width="match_parent"
                android:id="@+id/tagDes"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_height="35dp" />

            <TextView
                android:text="CON"
                android:layout_width="match_parent"
                android:id="@+id/tagCon"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_height="35dp" />

            <TextView
                android:text="INT"
                android:layout_width="match_parent"
                android:id="@+id/tagInt"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_height="35dp" />

            <TextView
                android:text="SAB"
                android:layout_width="match_parent"
                android:id="@+id/tagSab"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_height="35dp" />

            <TextView
                android:text="CAR"
                android:layout_width="match_parent"
                android:id="@+id/tagCar"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_height="35dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <TextView
                android:text="Base"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/tagBase"
                android:layout_weight="1"
                android:textAlignment="center" />

            <EditText
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editFor"
                android:textSize="14sp"
                android:elevation="1dp"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:text="0"
                android:textAlignment="center" />

            <EditText
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/editDes"
                android:textSize="14sp"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:textAlignment="center" />

            <EditText
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editCon"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:textAlignment="center" />

            <EditText
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editInt"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:textAlignment="center" />

            <EditText
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editSab"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:textAlignment="center" />

            <EditText
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editCar"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <TextView
                android:text="Mod"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/tagMod"
                android:layout_weight="1"
                android:textAlignment="center" />

            <EditText
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/editModFor"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:text="0"
                android:textSize="14sp"
                android:textAlignment="center" />

            <EditText
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/editModDes"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:text="0"
                android:textSize="14sp"
                android:textAlignment="center" />

            <EditText
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/editModCon"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:text="0"
                android:textSize="14sp"
                android:textAlignment="center" />

            <EditText
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/editModInt"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:text="0"
                android:textSize="14sp"
                android:textAlignment="center" />

            <EditText
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/editModSab"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:text="0"
                android:textSize="14sp"
                android:textAlignment="center" />

            <EditText
                android:inputType="numberSigned"
                android:ems="10"
                android:id="@+id/editModCar"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:text="0"
                android:textSize="14sp"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Misc"
        android:layout_alignTop="@+id/stats"
        android:layout_toRightOf="@+id/linhaNome"
        android:layout_toEndOf="@+id/linhaNome">

        <TextView
            android:text="Dano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tagDano"
            android:textAlignment="center" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editDano"
            android:textAlignment="center"
            android:textSize="14sp"
            android:text="0" />

        <TextView
            android:text="Armadura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tagArmadura"
            android:textAlignment="center" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editArm"
            android:textSize="14sp"
            android:textAlignment="center"
            android:text="0" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:text="Atual"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:id="@+id/tagAtual"
                android:layout_weight="1"
                android:textAlignment="center" />

            <TextView
                android:text="Total"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:id="@+id/tagTotal"
                android:layout_weight="1"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="PV"
                android:layout_height="wrap_content"
                android:id="@+id/tagPV"
                android:layout_weight="1"
                android:layout_width="25dp"
                android:textAlignment="center" />

            <EditText
                android:layout_width="35dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText24"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:textSize="14sp"
                android:textAlignment="center"
                android:text="0" />

            <EditText
                android:layout_width="35dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText25"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:textSize="14sp"
                android:textAlignment="center"
                android:text="0" />
        </LinearLayout>

        <TextView
            android:text="Carga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tagCarga"
            android:textAlignment="center" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText27"
            android:textSize="14sp"
            android:textAlignment="center"
            android:text="0" />

    </LinearLayout>

</RelativeLayout>
